<%= form_for @subscription, :url => { :action => :create, :meuble_id => @subscription.meuble.id }, html: { class: "form-inline" } do |f| %>
      <%= f.number_field :meuble_id, :class => 'hidden' %>
      <%= f.label 'Please fill in your e-mail first :', :class => 'control-label'%>
      <%= f.text_field :email, :class => 'text_field', :required => 'required', type: "email"  %>

    <%= f.submit 'Let\'s buy it !', :class => 'btn btn-primary btn-large btn-success' %>


<% end %>
