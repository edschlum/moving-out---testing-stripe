<%= form_tag charges_path(:meuble_id => @meuble.id) do %>
  <article>
    <label class="amount">
      <span>Amount: <%=  number_to_currency @meuble.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= (@meuble.price.to_d * 100).to_i %>"></script>
<% end %>