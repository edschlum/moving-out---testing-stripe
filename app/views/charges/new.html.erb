<div class="alert alert-success">
	Okay, I got your e-mail. Click on the button below to pay <%=  number_to_currency @meuble.price %> and buy my <%= @meuble.name %> !
</div>
<div class="row-inline offset4">
<%= form_tag charges_path(:meuble_id => @meuble.id) do %>

  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Buy <%= @meuble.name %>"
          data-amount="<%= (@meuble.price.to_d * 100).to_i %>"></script>
<% end %>
</div>
<div class="progress progress-striped span4 offset3">
  <div class="bar" style="width: 66%;"> 2 / 3</div>
</div>